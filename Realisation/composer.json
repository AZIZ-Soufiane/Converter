{
  "name": "fuji/converter",
  "version": "1.0.0",
  "description": "CLI tool to convert numbers to decimal, binary, and hexadecimal",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
        "clear-output": "php -r \"file_put_contents('samples/output.json', '');\"",
        "convert": [
            "@clear-output",
            "php bin/calc.php $(cat samples/input.txt) --json > samples/output.json"
        ],
        "build": [
            "@composer dump-autoload -o",
            "echo 'Build complete.'"
        ],
        "test": [
            "php -r \"$input = trim(file_get_contents('samples/input.txt')); passthru('php bin/calc.php ' . $input);\""
        ],
        "save": [
            "php -r \"$input = trim(file_get_contents('samples/input.txt')); passthru('php bin/calc.php ' . $input . ' --json > samples/output.json');\""
        ]
    },
  "require": {
    "php": ">=8.2"
  }
}
